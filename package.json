{
  "name": "yt-halo",
  "displayName": "Yt halo",
  "version": "0.0.1",
  "description": "A minimalist, privacy-first YouTube focus tool. Chrome Extension (Manifest V3).",
  "author": "",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.19",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://m.youtube.com/*",
      "https://youtu.be/*",
      "https://returnyoutubedislikeapi.com/*"
    ],
    "optional_host_permissions": [
      "https://studio.youtube.com/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_title": "YT Halo",
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "popup.html",
          "options.html"
        ],
        "matches": [
          "https://www.youtube.com/*",
          "https://m.youtube.com/*"
        ]
      }
    ]
  }
}
